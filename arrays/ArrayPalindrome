
https://www.geeksforgeeks.org/problems/perfect-arrays4645/1



class Solution {
    public static boolean isPerfect(int[] arr) {
        // code here
        boolean result=true;
        int i=0;
        int j=arr.length-1;
        while(i<=j){
            if(arr[i]!=arr[j]){
                result=false;
                break;
            }
            i++;
            j--;
        }
        return result;
    }
}
