//problem-link-https://www.geeksforgeeks.org/problems/triangle-pattern-1661492263/1?page=1&category=pattern-printing&sortBy=submissions


class Solution {

    void printTriangle(int n) {
       
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=n-i;j++) {
				System.out.print(" ");
				
				}
			for(int j=1;j<=(2*i)-1;j++) {
				System.out.print("*");
				
				}
			System.out.println();
		}
    }
}
